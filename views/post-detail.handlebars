<div>
 <h1>The Tech Blog</h1>
 </div>
 
<div class="ml-2">
    <p> {{allPost.title}} </p> <p>{{allPost.content}}</p>
</div>  
<div class="ml-2">
  {{#each allComments}}
  <section>
    <div>
      <p>{{description}}</p>
    </div>
    <div>
      <p>-{{user.username}} on {{format_date date_created}}</p> 
    </div>
    
  </section>
  {{/each}}
</div>
{{#if logged_in}}
<form class="class=ml-2">
  <div>
    <textarea class="ml-5" id="comment-txtarea" name="comment-body"></textarea>
  </div>

  <div>
    <button class="ml-5 mb-5" id="add-comment" data-post-id="{{allPost.id}}" type="submit">add comment</button>
  </div>
  
</form>
<script src="/js/add-comment.js"></script>
{{/if}}
</div>